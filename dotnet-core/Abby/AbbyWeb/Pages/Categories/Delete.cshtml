@page
@model AbbyWeb.Pages.Categories.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete category</h2>
        </div>
        <div asp-validation-summary="All"></div>
        <input asp-for="@Model.Category.Id" hidden />
        <div class="mb-3">
            <label asp-for="@Model.Category.Name">Name</label>
            <input asp-for="@Model.Category.Name" type="text" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Category.DisplayOrder">Display order</label>
            <input asp-for="@Model.Category.DisplayOrder" type="number" class="form-control" readonly />
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Back to list</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
