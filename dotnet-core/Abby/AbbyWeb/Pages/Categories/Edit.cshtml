@page
@model AbbyWeb.Pages.Categories.EditModel
@{
    ViewData["Title"] = "Edit";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit category</h2>
        </div>
        <div asp-validation-summary="All"></div>
        <input asp-for="@Model.Category.Id" hidden />
        <div class="mb-3">
            <label asp-for="@Model.Category.Name">Name</label>
            <input asp-for="@Model.Category.Name" type="text" class="form-control" />
            <span asp-validation-for="@Model.Category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Category.DisplayOrder">Display order</label>
            <input asp-for="@Model.Category.DisplayOrder" type="number" class="form-control" />
            <span asp-validation-for="@Model.Category.DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Update</button>
        <a asp-page="Index" class="btn btn-secondary">Back to list</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
