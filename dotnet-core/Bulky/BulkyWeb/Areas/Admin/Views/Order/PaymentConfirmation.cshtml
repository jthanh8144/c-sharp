@model int
@{
    ViewData["Title"] = "Order confirm";
}

<div class="container row">
    <div class="col-12 text-center">
        <h1 class="text-primary text-center">Payment Successfully!</h1>
        Order Number is : @Model <br /><br />
        <img src="~/images/lawn_leaf.jpg" width="65%" />
    </div>
    <div class="col-12 text-center" style="color:maroon">
        <br />
        Payment has been placed successfully! <br />
        <a
           asp-area="Admin" asp-controller="Order" asp-action="Details" asp-route-orderId="@Model"
           class="btn btn-primary">
            Back to order details
        </a>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}